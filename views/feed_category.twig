{% extends "base.twig" %}
{% block content %}
    <div class="container"><br>
        
        <div class="col-sm-0" style="visibility:hidden;" id="sidebarMaincon">
            <ul class=" nav-stacked navbar-fixed-top" id="sidebar" style="text-align:center;"  >
                <div class="logoMock">
                    <a class="navbar-brand" href="http://edrsvc.com" style="padding-left: 0px;top:0;color:#A6929F;"> //edrsvc<br></a>
                    <div style="clear:both;"></div>
                </div>
                <li class="nav-item" > 
                    <a class="nav-link " href="http://edrsvc.com"  >Home </a>
                </li>
                <li class="nav-item">
                <li class="nav-item navbar-right">
                    <a class="nav-link usr" href="#" id="logout" >Logout</a>
                </li>
                <div style="position:absolute;bottom:20px;">(C) 2016 edrsvc.com<br>impressum</div>
            </ul>
        </div>
        
        <div class="col-sm-12 " id="maincon">
            <div class="card-deck-wrapper">
                <div class="wan" id="wan">
                    {% if feeds is defined%}
                        <input type="hidden" id="cat" value="{{ category }}">
                        {% for key,value in feeds %}
                            <div class="card" style="max-height: 10;">
                                <div class="card-block">
                                    <a href="{{ value.link.0 }}"target="_blank">
                                        <h4 class="card-title"target="_blank">
                                            {{ value.title }}
                                        </h4>
                                    </a>
                                    <p class="card-text">
                                        {{ value.desc }}
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            {{ value.pubDate }} // {{ value.name }}
                                        </small>
                                    </p>
                                </div>
                                <div class="card-footer text-muted" >
                                    <b>
                                        {{ value.tag }}
                                    </b>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                    <!-- feeds -->
                </div>
            </div>
        </div>
    </div><!-- /container -->
{% endblock %}