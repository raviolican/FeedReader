<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
            <meta http-equiv="x-ua-compatible" content="ie=edge">
            <meta name="description" content="{{ description }}" />
            <meta name="keywords" content="{{ keywords }}" />
            <meta name="author" content="Simon Daum">
            <meta name="robots" content="index, follow" />
            <meta name="revisit-after" content="1 days" />
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
            <meta name="google-site-verification" content="m1r3uKHAM8C2ANXHQ6kus33APJ36-4dzXNWUbnbEowk" />
            <script src="http://cdn.rawgit.com/twbs/bootstrap/v4-dev/dist/js/bootstrap.js" ></script>
            <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
            <script src="https://use.fontawesome.com/9c3dd9265c.js"></script>
            <script src="http://localhost/FeedReader/views/js/zeitfeed.js" type="text/javascript"></script> 
            <link href="http://localhost/FeedReader/views/css/bootstrap4.css" rel="stylesheet" >
            <title>{{ title }}</title>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar bg-faded navbar-fixed-top" id="topnav">
            <button class="navbar-toggler hidden-sm-up" type="button" data-toggle="collapse" data-target="#toggle">
                &#9776;
            </button>
            <div class="collapse navbar-toggleable-xs" id="toggle">
                <a class="navbar-brand" href="http://localhost/FeedReader/" style="padding-left: 20px;">//edrsvc</a>
                <ul class="nav navbar-nav">
                    <li class="nav-item" >
                        <a class="nav-link " href="http://localhost/FeedReader/"  >{{HOMEPAGE}} </a>
                    </li> 
                    {% if categories is defined %}
                        {% for key,value in categories %}
                            <li class="nav-item" >
                                <a class="nav-link " href="http://localhost/FeedReader/feeds/r/{{ key }}"  >{{value}} </a>
                            </li> 
                        {% endfor %}
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav pull-xs-right">
                    <li class="nav-item"> 
                        {%if email is defined %}
                        <li class="nav-item navbar-right">
                            <a class="nav-link usr" href="http://localhost/FeedReader/users/settings" >{{email}}</a>
                        </li>
                        <li class="nav-item navbar-right">
                            <a class="nav-link usr" href="#" id="logout" >Logout</a>
                        </li>
                       {% else %}
                        <li class="nav-item navbar-right">
                            <a class="nav-link usr" href="http://localhost/FeedReader/users/login"  >{{LOGIN}}</a>
                        </li>
                        <li class="nav-item navbar-right">
                            <a class="nav-link usr" href="http://localhost/FeedReader/users/register">
                                {{REGISTER}}
                            </a>
                        </li>
                        {% endif %}
                    <li class="nav-item navbar-right">
                        <a class="nav-link usr" href="#" id="navLog" data-toggle="modal" 
                           data-target=".modalLogin">
                        </a> 
                    </li>
                </ul>
            </div>
        </nav><!-- /top-nav -->
        <div id="content">
            {% block content %}{% endblock %}
        </div>
        <div id="footer">
            <div class="container-fluid footer">
                <div class="row">
                    <div class="col-sm-6">
                    {% block footer %}
                        {% set foo = {'Deutsch': 'de_AT','English':'en_GB'} %}
                        <select name="selectLanguage" id="selectLanguage"  class="c-select">
                        {% for key,value in foo %}
                            {% if language == value%}
                                <option value="{{ value }}" selected="selected">{{ key }}</option>
                            {% else %}
                                <option value="{{ value }}">{{ key }}</option>
                            {% endif %}
                        {% endfor %}
                        </select>
                    {% endblock %}
                    </div>
                    <div class="col-sm-6">
                    </div>  
                </div>
            </div>
        </div>
    </body>
</html>