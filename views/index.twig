        <!-- MODALS -->
            <div class="modal fade modalRegister" tabindex="-1" role="dialog" id="modalRegister" 
                 aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-6">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="gridModalLabel">Registrieren</h4>
                        </div>
                        <div class="modal-body">
                            <p>
                                Teile uns deine bevorzugten Zugangsdaten mit.
                            <ul>
                                <li>Password Zwischen 6-12</li>
                                <li>Großbuchstaben/Kleinbichstaben</li>
                                <li>Keine Sonderzeichen</li>
                            </ul>
                            </p>
                            <form class="popForm register-form" method="post" id="register-form">
                                <div id="error" style="color: red;">
                                </div>
                                <fieldset class="form-group">
                                    <label for="regInputEmail">E-Mail Adresse*</label>
                                    <input type="email" class="form-control" id="regInputEmail" autocomplete="email" name="regInputEmail" 
                                           placeholder="Enter email">
                                </fieldset>
                                <fieldset class="form-group">
                                    <label for="regInputPWD">Passwort*</label>
                                    <input type="password" class="form-control" autocomplete="new-password" id="regInputPWD" name="regInputPWD"
                                           placeholder="Password">
                                </fieldset>
                                <fieldset class="form-group">
                                    <label for="regInputPWD_re">Passwort wiederholen*</label>
                                    <input type="password" class="form-control" id="regInputPWD_re" name="regInputPWD_re" 
                                           placeholder="Password">
                                </fieldset>
                                <fieldset class="form-group">
                                    <button type="button" class="submit" name="submit" value="register" id="registerBTN">
                                        Abschicken
                                    </button> 
                                </fieldset>
                            </form>
                        </div>
                        <div class="modal-footer" style="text-align: left;">
                            <p>
                                <small>
                                    *Pflichtfelder<br>Anmeldung nach der Registration sofort möglich, 
                                    kein Aktivierung Ihrer E-Mail nötig. Ihre E-Mail wird vertrauenswürdig 
                                    und mit Sorgfalt behandelt.
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade modalLogin" tabindex="-1" role="dialog" id="modalLogin" 
                 aria-labelledby="mySmallModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="gridModalLabel">Einloggen</h4>
                        </div>
                        <div class="modal-body">
                            <form class="login-form" method="post" id="login-form">
                                <div id="error">
                                </div>
                                <fieldset class="form-group">
                                    <label for="loginInputEmail">E-Mail Adresse*</label>
                                    <input type="email" class="form-control" id="loginInputEmail" name="loginInputEmail" 
                                           placeholder="Enter email">
                                </fieldset>
                                <fieldset class="form-group">
                                    <label for="loginInputPWD">Passwort*</label>
                                    <input type="password" class="form-control" id="loginInputPWD" name="loginInputPWD" 
                                           placeholder="Password">
                                </fieldset>
                                <fieldset class="form-group">
                                    <button type="button" class="submit" name="submit" value="login" id="loginBTN">
                                        Login
                                    </button> 
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div
